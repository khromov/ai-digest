{
  "name": "ai-digest",
  "version": "1.5.1",
  "description": "CLI tool to aggregate files into a single Markdown file",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-digest": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "start": "ts-node src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest --config jest.config.js",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "format": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts,json}\" \"!src/**/*.snap\"",
    "analyze-tokens": "ts-node scripts/analyze-token-ratio.ts",
    "calculate-multiplier": "ts-node scripts/calculate-multiplier.ts",
    "test-multiplier": "ts-node scripts/test-multiplier.ts",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "aggregate",
    "markdown"
  ],
  "author": "Stanislav Khromov",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "glob": "^11.0.2",
    "ignore": "^7.0.4",
    "isbinaryfile": "^5.0.4",
    "tiktoken": "^1.0.18"
  },
  "homepage": "https://github.com/khromov/ai-digest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khromov/ai-digest.git"
  },
  "bugs": {
    "url": "https://github.com/khromov/ai-digest/issues"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
