{
  "name": "ai-digest",
  "version": "1.3.0",
  "description": "CLI tool to aggregate files into a single Markdown file",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-digest": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "start": "ts-node src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest --config jest.config.js",
    "prettier": "prettier --write \"src/**/*.{js,ts,json}\" \"!src/**/*.snap\""
  },
  "keywords": [
    "cli",
    "aggregate",
    "markdown"
  ],
  "author": "Stanislav Khromov",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "glob": "^11.0.2",
    "ignore": "^7.0.4",
    "isbinaryfile": "^5.0.4",
    "tiktoken": "^1.0.18"
  },
  "homepage": "https://github.com/khromov/ai-digest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khromov/ai-digest.git"
  },
  "bugs": {
    "url": "https://github.com/khromov/ai-digest/issues"
  }
}
